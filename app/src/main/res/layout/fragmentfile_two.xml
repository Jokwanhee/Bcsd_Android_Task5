<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/c_number"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="end"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c_number"
        app:layout_constraintBottom_toTopOf="@+id/layout_two">

        <Button
            android:id="@+id/btn_ac"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_background_circle"
            android:text="AC"
            android:textSize="30dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_pm"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:text="+/-"
            android:textSize="30dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_rest"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:text="%"
            android:textSize="30dp"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_divide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:backgroundTint="#FFAF39"
            android:text="/"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_one"
        app:layout_constraintBottom_toTopOf="@+id/layout_third">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="7"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="8"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="9"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_multi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:backgroundTint="#FFAF39"
            android:text="X"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_third"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_two"
        app:layout_constraintBottom_toTopOf="@+id/layout_fourth">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="4"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="5"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="6"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:backgroundTint="#FFAF39"
            android:text="-"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fourth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_third"
        app:layout_constraintBottom_toTopOf="@+id/layout_fifth">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="1"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="2"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="3"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_plus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:backgroundTint="#FFAF39"
            android:text="+"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fifth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_fourth"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="0"
            android:textSize="30dp"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:backgroundTint="#686868"
            android:background="@drawable/ic_background_circle"
            android:text="."
            android:textSize="30dp"
            android:textColor="#ffffff"/>


        <Button
            android:id="@+id/btn_equals"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_background_circle"
            android:backgroundTint="#FFAF39"
            android:text="="
            android:textSize="30dp"
            android:textColor="#ffffff"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>